<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isoterik.android.mybaby">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PregnancyTrackerActivity"
            android:label="@string/title_activity_pregnancy_tracker"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>

        <activity
            android:name=".BabyKickCounterActivity"
            android:label="@string/baby_kick_counter"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>

        <activity
            android:name=".ContractionTimerActivity"
            android:label="@string/contraction_timer"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>

        <activity
            android:name=".PregnancyTipsActivity"
            android:label="@string/pregnancy_tips"
            android:theme="@style/Bared"
            android:screenOrientation="portrait">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"></meta-data>
        </activity>
    </application>

</manifest>